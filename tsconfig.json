{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "#app/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"],
  "compileOnSave": false
}
